@{
    ViewData["Title"] = "Lugares";
}

<link rel="stylesheet" href="~/css/tipoEjercicios.css">


<div class="text-center">
    <h1 class="display-4 tituloEj mt-2">Eventos Deportivos</h1>
</div>

<!-- Button trigger modal -->
<div class="mb-2">
    <button type="button" onclick="NuevoEvento()" class="btn btn-danger" data-bs-toggle="modal"
        data-bs-target="#modalEventos">
        <i class="fa-solid fa-plus"></i> Cargar Evento
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="modalEventos" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
                    onclick="LimpiarForm()"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div>
                        <input type="hidden" id="EventoID" value="0">
                        <label for="eventoNombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="eventoNombre" style="text-transform:uppercase">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="LimpiarForm()" class="btn btn-secondary"
                    data-bs-dismiss="modal">Cancelar</button>
                <button type="button" onclick="GuardarEvento()" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>

<table class="table table-dark table-bordered table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th style="width: 150px"></th>
            <th style="width: 150px"></th>
        </tr>
    </thead>
    <tbody id="tbody-eventos"></tbody>
</table>

@section Scripts {
    <script src="~/js/eventosDeportivos.js"></script>
}