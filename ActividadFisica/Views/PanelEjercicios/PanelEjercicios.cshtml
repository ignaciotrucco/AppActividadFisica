@{
    ViewData["Title"] = "Panel de Ejercicios";
}
<div class="text-center">
    <h1 class="display-4 tituloEj mb-5">Panel de Ejercicios</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <h3>Métodos de Búsqueda</h3>
        <div>
            <label class="control-label">Mes:</label>
            <select class="form-control" id="BuscarMesEjercicio">
                <option value="1">Enero</option>
                <option value="2">Febrero</option>
                <option value="3">Marzo</option>
                <option value="4">Abril</option>
                <option value="5">Mayo</option>
                <option value="6" selected>Junio</option>
                <option value="7">Julio</option>
                <option value="8">Agosto</option>
                <option value="9">Septiembre</option>
                <option value="10">Octubre</option>
                <option value="11">Noviembre</option>
                <option value="12">Diciembre</option>
            </select>
        </div>

        <div>
            <label class="control-label">Año:</label>
            <select class="form-control" id="BuscarAnioEjercicio">
                <option value="2023">2023</option>
                <option value="2024" selected>2024</option>
            </select>
        </div>

        <div>
            <label class="control-label">Tipo de Ejercicio:</label>
            @Html.DropDownList("TipoEjercicioID", null, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="mt-5">
            <h3>Tipos de Ejercicios</h3>
            <canvas id="GraficoRedondo"></canvas>
        </div>

    </div>


    <div class="col-md-8">
        <div class="row">
            <h3>Resumen del mes</h3>
            <div class="col-lg-6 col-md-6">
                <div class="card text-success mb-2">
                    <div class="card-body text-center" id="textoTotalEjercicios"></div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="card text-danger mb-2">
                    <div class="card-body text-center" id="textoSinEjercicios"></div>
                </div>
            </div>
            <div class="mt-3">
                <h3>Ejercicios por Día</h3>
                <canvas id="GraficoBarras"></canvas>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/charts.js"></script>
    <script src="~/js/graficos-1.0.0.js"></script>
}