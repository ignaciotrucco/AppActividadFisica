@{
  ViewData["Title"] = "Informe Por Lugar";
}

<link rel="stylesheet" href="~/css/tipoEjercicios.css">

<div class="text-center">
  <h1 class="display-4 tituloEj mt-2">Informe Ejercicios Fisicos Por Lugar</h1>
</div>


  <div class="card card-body bg-dark">
    <div class="row">
      <div class="col-md-2">
        <label for="FechaDesdeBuscar" class="form-label text-light">Fecha desde</label>
        <input type="date" id="FechaDesdeBuscar" class="form-control" onchange="ListadoInformeEjerciciosFisicosPorLugar()"/>
      </div>
      <div class="col-md-2">
        <label for="FechaHastaBuscar" class="form-label text-light">Fecha hasta</label>
        <input type="date" id="FechaHastaBuscar" class="form-control"  onchange="ListadoInformeEjerciciosFisicosPorLugar()"/>
      </div>
      <div class="col-md-2 mt-4">
        <button type="button" class="btn btn-danger" onclick="LimpiarFiltros()">Limpiar</button>
      </div>
    </div>
  </div>



<table class="table table-dark table-bordered table-striped">
  <thead>
    <tr>
      <th class="text-center">Lugar</th>
      <th class="text-center">Fecha Inicio</th>
      <th class="text-center">Fecha Fin</th>
      <th class="text-center">Duracion</th>
      <th class="text-center">Tipo de ejercicio</th>
      <th class="text-center">Observaciones</th>
    </tr>
  </thead>
  <tbody id="tbody-informePorLugar"></tbody>
</table>



@section Scripts {
  <script src="~/js/informePorLugar.js"></script>
}