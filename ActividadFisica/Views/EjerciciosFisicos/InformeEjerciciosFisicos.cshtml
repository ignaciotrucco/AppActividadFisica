@{
  ViewData["Title"] = "Informe";
}

<link rel="stylesheet" href="~/css/tipoEjercicios.css">

<div class="text-center">
  <h1 class="display-4 tituloEj mt-2">Informe Ejercicios Fisicos</h1>
</div>


  <div class="card card-body bg-dark">
    <div class="row">
      <div class="col-md-2">
        <label for="FechaDesdeBuscar" class="form-label text-light">Fecha desde</label>
        <input type="datetime-local" id="FechaDesdeBuscar" class="form-control" />
      </div>
      <div class="col-md-2">
        <label for="FechaHastaBuscar" class="form-label text-light">Fecha hasta</label>
        <input type="datetime-local" id="FechaHastaBuscar" class="form-control" />
      </div>
      <div class="col-md-2 mt-4">
        <button type="button" class="btn btn-danger" onclick="ListadoInformeEjerciciosFisicos()">Filtrar!</button>
      </div>
      <div class="col-md-2 mt-4">
        <button type="button" class="btn btn-danger" onclick="LimpiarFiltros()" onchange="ListadoInformeEjerciciosFisicos()">Limpiar</button>
      </div>
    </div>
  </div>



<table class="table table-dark table-bordered table-striped" id="imprimir-tabla">
  <thead>
    <tr>
      <th class="text-center">Tipo de Ejercicio</th>
      <th class="text-center">Fecha Inicio</th>
      <th class="text-center">Estado Emocional</th>
      <th class="text-center">Fecha Fin</th>
      <th class="text-center">Estado Emocional</th>
      <th class="text-center">Duracion</th>
      <th class="text-center">Observaciones</th>
    </tr>
  </thead>
  <tbody id="tbody-informe"></tbody>
</table>



@section Scripts {
  <script src="~/js/informeEjercicios.js"></script>
}