@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/login.css">

<div class="d-flex align-items-center flex-column justify-content-center h-100 text-dark mt-3" id="header">
    <div class="row" id="loginForm">
        <div class="col-md-6 col-sm-12 text" id="right">
            <h2>Bienvenido a la APP de Movimiento Activo del Instituto Ezpeleta</h2>
            <p class="mb-3 text-muted" style="font-size:78.5% !important;">Registrese con Email y Contraseña</p>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group mt-3">
                    <label style="background: red; padding:5px;color:white !important;">Email</label>
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="Enter email">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label style="background: red; padding:5px;color:white !important;">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" aria-required="true" class="form-control" placeholder="Password">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label style="background: red; padding:5px;color:white !important;">Repetir Contraseña</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" class="form-control" placeholder="Password">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="btn btn-primary mt-4" >Registrarse</button>

                <div class="mt-3 d-flex align-items-center justify-content-center">
                    <p class="mb-0 me-2">¿Ya tienes cuenta?</p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" data-mdb-button-init data-mdb-ripple-init class="btn btn-dark">¡Inicia Sesión!</a>
                </div>

            </form>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
