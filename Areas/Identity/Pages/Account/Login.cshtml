@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/login.css">


<div class="d-flex align-items-center flex-column justify-content-center h-100 text-dark mt-3" id="header">
    <div class="row" id="loginForm">
        <div class="col-md-6 col-sm-12 text" id="right">
            <h2>Bienvenido a la APP de Movimiento Activo del Instituto Ezpeleta</h2>
            <p class="mb-3 text-muted" style="font-size:78.5% !important;">Inicie sesión con Email y Contraseña</p>
            <form id="account" method="post">
                <div class="form-group">
                    <label style="background: red; padding:5px;color:white !important;">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter email">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label style="background: red; padding:5px;color:white !important;">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" class="form-control" placeholder="Password">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="row mt-2">
						<p>
                        	<a class="text-muted" id="forgot-password" asp-page="./ForgotPassword">¿Olvidó su contraseña?</a>
                    	</p>
                </div>
                <button id="login-submit" type="submit" class="btn btn-primary mt-4" >Iniciar Sesión</button>

                <div class="mt-3 d-flex align-items-center justify-content-center">
                    <p class="mb-0 me-2">¿No tienes cuenta?</p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" data-mdb-button-init data-mdb-ripple-init class="btn btn-dark">¡Create Una!</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
